@model IEnumerable<Corpassb.Areas.Admin.Models.User>
@{
    ViewBag.Title = "Пользователи";
}

<a asp-action="Create" class="centered">Добавить пользователя</a>
<br />
<br />

<table class="centered">
    <tr><th>Email</th><th>Логин</th></tr>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Email</td>
            <td>@user.UserName</td>
            <td>
                <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                    <a asp-action="Edit" asp-route-id="@user.Id">Изменить</a>
                    <a asp-action="ChangePassword" asp-route-id="@user.Id">Сменить пароль</a>
                    <button type="submit" class="btn btn-danger">
                        Удалить
                    </button>
                </form>
            </td>
        </tr>
    }
</table>